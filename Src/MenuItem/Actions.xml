<?xml version="1.0" encoding="utf-8" ?>

<!-- 
  This file contains actions configuration this plugin. 
  It will be loaded automatically by resource name specified by ActionsXml attribute of the plug-in assembly.
-->

<actions>

  <!-- 
  Insert items into the main menu.
  "anchor-id" attribute value is the ID of the action corresponding to "Show Plugins..." menu item in "Tools" menu.
  Insert items after this menu item.
  -->  
  <insert group-id="ReSharper" anchor-id="ShowHelp" position="before">
    <separator/>
    <!-- 
      Tag "action" declares an action. 
      There should be an action handler class marked with "ActionHandler" attribute with ID of this action. 
      Action ID should be unique so it's recommended to prefix IDs of all your actions with your plugin prefix.
    -->
    <action id="AddMenuItem.ShowCurrentSolution" text="Show Current Solution" image="JetBrains.ReSharper.PowerToys.MenuItem.testImage.gif"/>
    <action id="AddMenuItem.ShowCurrentLineNumber" text="Show Current Line"/>
  </insert>

  <!-- Insert 'Show Current Line' action into editor's popup menu. -->  
  <insert group-id="VS#Code Window" position="last">
    <separator/>
    <action-ref id="AddMenuItem.ShowCurrentLineNumber" />
  </insert>

  <!-- Insert 'Show Current Solution' action into solution explorer Solution menu -->
  <insert group-id="VS#Solution" position="last">
    <separator/>
    <action-ref id="AddMenuItem.ShowCurrentSolution"/>
  </insert>

  <!-- Insert 'Show Current Line' action into solution explorer Item menu -->
  <insert group-id="VS#Item" position="last">
    <separator/>
    <action-ref id="AddMenuItem.ShowCurrentSolution"/>
  </insert>
    
  <!-- Insert 'Show Current Line' action into solution explorer Project menu -->
  <insert group-id="VS#Project" position="last">
    <separator/>
    <action-ref id="AddMenuItem.ShowCurrentSolution"/>
  </insert>
</actions>
